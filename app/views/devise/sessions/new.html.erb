<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="field my-3 py-2 text-capitalize">
    <%= f.label :email %>
    <%= f.text_field :email, class:"form-control", placeholder:"john_doe@gmail.com"%>
  </div>

  <div class="field my-3 py-2 text-capitalize">
    <%= f.label :password %>
    <%= f.text_field :password, class:"form-control", placeholder:"******"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-3 py-2 text-capitalize">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions field my-3 py-2 text-capitalize">
    <%= f.submit "Log in", class: "btn btn-lg btn-success w-100"%>
  </div>
<% end %>

