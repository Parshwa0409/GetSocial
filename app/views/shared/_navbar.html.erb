<%= stylesheet_link_tag "navbar" %>

<!--Main Navigation-->
<header>
  <!-- Sidebar -->
  <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
    <div class="nav-items">

      <div class="list-group list-group-flush mx-3 mt-4">
        <!--  -->
        <p
          class="navbar-brand p-2">
          <i class="fa-solid fa-mobile fa-fw me-3"></i><span>GetSocial</span>
        </p>
        <!--  -->
        <%= link_to root_path, class: 'list-group-item list-group-item-action py-2 ripple' do %>
          <i class="fa fa-home fa-fw me-3"></i><span>Home</span>
        <% end %>

        <!--  -->
        <%= link_to search_path, method: :get ,class: 'list-group-item list-group-item-action py-2 ripple' do %>
          <i class="fa fa-search fa-fw me-3"></i><span>Search</span>
        <% end %>

        <!-- REPLACE NOTITFICATION WITH -REQUESTS-ACTIVITY-MESSAGES  -->
        <%= link_to requests_index_path, class: 'list-group-item list-group-item-action py-2 ripple' do %>
          <i class="fas fa-bell fa-fw me-3"></i><span>Requests</span>
        <% end %>

        <%= link_to '#', class: 'list-group-item list-group-item-action py-2 ripple' do %>
          <i class="fa-solid fa-heart fa-fw me-3"></i><span>Activity</span>
        <% end %>

        <%= link_to '#', class: 'list-group-item list-group-item-action py-2 ripple' do %>
          <i class="fa-solid fa-message fa-fw me-3"></i><span>Messages</span>
        <% end %>

        <!-- WHY MODAL NOT WORKING -->

        <%= link_to root_path, class: 'list-group-item list-group-item-action py-2 ripple', "data-bs-toggle"=>"modal" ,"data-bs-target"=>"#exampleModalCenter" do %>
          <i class="fa fa-plus fa-fw me-3"></i><span>Create</span>
        <% end %>

        <!--  -->
        <%= link_to profile_path(current_user), method: :get ,class: 'list-group-item list-group-item-action py-2 ripple' do %>
          <i class="fa fa-user fa-fw me-3"></i>
          <span>Profile</span>
        <% end %>
      </div>
    </div>
  </nav>
  <!-- Sidebar -->
</header>
<!--Main layout-->
