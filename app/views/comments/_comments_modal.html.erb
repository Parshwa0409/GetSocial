<div class="modal fade" id="commentsModal" tabindex="-1" role="dialog" aria-labelledby="commentsModalTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="commentsModalTitle">Comments Section</h5>
        <button type="button" class="close" data-bs-dismiss="modal" id="comments-modal-close" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="comment-modal-body">

        <form method="post" id="post-comment-form" class="my-3">
          <div class="row">
            <div class="col-8">
              <div class="form-group">
                <label for="post-comment-input">New Comment:</label>
                <input type="text" class="form-control" id="post-comment-input" name="comment[content]" placeholder="Type your comment here">
              </div>
            </div>

            <div class="col-4">
              <button type="submit" class="btn btn-md btn-outline-dark w-100" id="post-comment-btn">Post Comment</button>
            </div>

            <input type="hidden" name="authenticity_token" id="authenticity_token">
          </div>
        </form>

        <div id="comments-content"></div>
      </div>
    </div>
  </div>
</div>