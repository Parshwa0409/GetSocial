<div class="modal fade" id="createPostModal" tabindex="-1" role="dialog" aria-labelledby="createPostModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">New Post</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for build_new_post(), url: posts_path, method: :post, data: { turbo: false } do |form| %>
          <div class="mb-3">
            <%= form.label :caption, class: "form-label text-capitalize" %>
            <%= form.text_area :caption, class: "form-control", placeholder: "I'm excited to share a post on GetSocial App ðŸ¥³" %>
          </div>
          <div class="mb-3">
            <%= form.label :image, class: "form-label text-capitalize" %>
            <%= form.file_field :image, class: "form-control" %>
          </div>
          <div class="text-center mt-4">
            <%= form.submit 'Share ðŸ“¤', class: "btn btn-outline-dark w-100", id: "create-post-btn", "data-bs-dismiss" => "modal" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger w-100" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
