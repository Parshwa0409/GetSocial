<%= stylesheet_link_tag "messages" %>

<div class="show-msg-container">
    <h4><strong>From:</strong> <%= @message.recipient.email %></h4>
    <p><strong>Message: </strong> <%= @message.msg %></p>
    <% if @message.attachment.attached? %>
        <p><strong>Attachment: </strong></p>
        <div class="attachment-contianer">
            <%= image_tag @message.attachment %>
        </div>
    <% end %>
</div>